<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:dialogTitle="输入信噪比(SNR):"
        android:hint="范围:-10 ~ 100，精度为0.01"
        android:inputType="numberSigned|numberDecimal"
        android:key="host_snr"
        android:summary="范围:-10 ~ 100，精度为0.01"
        android:title="信噪比(SNR)设置" />

    <SwitchPreference
        android:key="host_position_status"
        android:summary="地理位置解调状态"
        android:title="地理位置解调状态" />

    <EditTextPreference
        android:dialogTitle="输入经度信息:"
        android:hint="范围:-180 ~ 180，精度为0.01"
        android:inputType="numberSigned|numberDecimal"
        android:key="host_longitude"
        android:summary="东经为负，西经为正(范围:-180 ~ 180，精度为0.01)"
        android:title="经度信息设置" />

    <EditTextPreference
        android:dialogTitle="输入纬度信息:"
        android:hint="范围:-90 ~ 90，精度为0.01"
        android:inputType="numberSigned|numberDecimal"
        android:key="host_latitude"
        android:summary="南纬为正，北纬为负(范围:-90 ~ 90，精度为0.01)"
        android:title="纬度信息设置" />

    <ListPreference
        android:dialogTitle="请选择类型"
        android:entries="@array/receiver_entries"
        android:entryValues="@array/receiver_entries_value"
        android:key="host_receiver_type"
        android:summary="接收机类型设置"
        android:title="接收机类型" />

    <EditTextPreference
        android:dialogTitle="请输入信号频率:"
        android:hint="精度为0.1"
        android:inputType="numberSigned|numberDecimal"
        android:key="host_freq"
        android:summary="信号频率"
        android:title="信号频率" />

    <EditTextPreference
        android:dialogTitle="请输入接收信号强度:"
        android:hint="有效范围为-50~-150dBm，精度为0.01"
        android:inputType="numberSigned|numberDecimal"
        android:key="host_rsl"
        android:summary="表征解调模块接收的特定的载波信号的输入功率(有效范围为-50~-150dBm，精度为0.01)"
        android:title="接收信号强度设置" />


</PreferenceScreen>